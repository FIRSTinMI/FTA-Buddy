{
   "compilerOptions": {
      "strict": true,
      "module": "commonjs",
      "target": "es6",
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "dist/js",
      "noEmitOnError": true,
      "typeRoots": [
         "node_modules/@types"
      ],
      "lib": [
         "ES2021",
         "DOM",
         "DOM.Iterable",
         "WebWorker"
      ],
      "paths": {
         "@shared/*": [
            "../shared/*"
         ]
      },
      "types": [
         "chrome"
      ]
   }
}