{
    "manifest_version": 3,
    "name": "FTA Buddy",
    "description": "Enable the field monitor and notes sync for FTA Buddy app",
    "version": "1.2",
    "permissions": [
        "scripting",
        "webNavigation",
        "storage"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "http://10.0.100.5/FieldMonitor",
                "http://localhost/FieldMonitor/",
                "https://ftabuddy.com/FieldMonitor/"
            ],
            "js": [
                "js/injector.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "js/injected.js"
            ],
            "matches": [
                "http://10.0.100.5/*",
                "http://localhost/*",
                "https://ftabuddy.com/*"
            ]
        }
    ],
    "icons": {
        "48": "img/logo48.png",
        "128": "img/logo128.png"
    },
    "action": {
        "default_popup": "menu.html",
        "default_icon": "img/logo.png"
    },
    "host_permissions": [
        "http://10.0.100.5/FieldMonitor",
        "http://localhost/FieldMonitor/",
        "https://ftabuddy.com/FieldMonitor/"
    ]
}