{
    "include": [
        "./src/**/*.ts",
        "./shared/**/*.ts",
        "./extension/**/*.ts",
        "../app/node_modules/svelte/*"
    ],
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
